#!/bin/sh

transmission-remote -l 2>&1 | grep % |
  sed " # This first sed command is to ensure a desirable order with sort
  s/.*Stopped.*/A/g;
  s/.*Seeding.*/Z/g;
  s/.*100%.*/N/g;
  s/.*Idle.*/B/g;
  s/.*Uploading.*/L/g;
  s/.*%.*/M/g" |
    sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
        s/A/%{F#0f0}ğŸ›‘%{F-}/g;
        s/B/âŒ›ï¸/g;
        s/L/ğŸ”¼/g;
        s/M/ğŸ”½/g;
        s/N/%{F#f00}âœ…%{F-}/g;
        s/Z/%{F#f00}ğŸŒ±%{F-}/g" | awk '{print $2, $1}' | tr '\n' ' ' | sed -e "s/ $//g"
echo
        

case $BLOCK_BUTTON in
    1) $TERMINAL -e tremc ;;
    3) pgrep -x dunst >/dev/null && notify-send "<b>Torrent module:</b>
ğŸ›‘: paused
â³: idle (seeds needed)
ğŸ”¼: uploading (unfinished)
ğŸ”½: downloading
âœ…: done
ğŸŒ±: done and seeding" ;;
esac

