" jk;
map j scroll left
map k scroll down
map l scroll up
map ; scroll right
"map J scroll down
"map K scroll up

set show-scrollbars
set selection-clipboard clipboard
set first-page-column 1:1
set window-title-basename
set window-title-home-tilde
set font "mono 20"

set statusbar-home-tilde
map w adjust_window width
map W adjust_window best-fit

map D toggle_page_mode

map r reload
map R rotate

map i recolor
map p print

map d navigate next
map u navigate previous

set recolor-lightcolor "#ffeecc"
set recolor-darkcolor "#000000"

map v feedkeys ":exec bash -c \"pdftotext -f $PAGE -l $PAGE \\\"$FILE\\\" /tmp/tmpzathura.txt; st -e nvim /tmp/tmpzathura.txt\"<Return>"
map V feedkeys ":exec bash -c \"pdftotext \\\"$FILE\\\" /tmp/tmpzathura.txt; st -e nvim /tmp/tmpzathura.txt\"<Return>"
map y exec notify-send a

