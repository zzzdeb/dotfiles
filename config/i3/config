# #---Modes ---# #
mode "resize" {
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_leader leader
mode "$mode_leader" {
    bindsym b exec rofi -show windowcd -lines 10, mode "default"
    bindsym k sticky toggle, mode "default"
    bindsym m exec --no-startup-id dmenumount, mode "default"
    bindsym shift+m exec --no-startup-id dmenuumount, mode "default"
    bindsym l exec --no-startup-id lmc toggle, mode "default"
    # scratchpad
    bindsym shift+s move scratchpad
    bindsym s scratchpad show
    bindsym slash exec --no-startup-id ducksearch, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "moveit" {
    bindsym Up move up 20px
    bindsym Left move left 20px
    bindsym Down move down 20px
    bindsym Right move right 20px
    bindsym Mod4+m mode "default"
}

set $mode_MediaPlayer (s)(u)(d)(n) next, (p) prev, (space) play
mode "$mode_MediaPlayer" {
    bindsym s exec flatpak run eu.tiliado.NuvolaAppAmazonCloudPlayer ; mode "default"
    bindsym space exec --no-startup-id qdbus org.mpris.MediaPlayer2.NuvolaAppAmazonCloudPlayer /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause 	; mode "default"
    bindsym n exec --no-startup-id qdbus org.mpris.MediaPlayer2.NuvolaAppAmazonCloudPlayer /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next		; mode "default"
    bindsym p exec --no-startup-id qdbus org.mpris.MediaPlayer2.NuvolaAppAmazonCloudPlayer /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous	; mode "default"
	bindsym u exec --no-startup-id pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo +5% & pactl set-sink-volume alsa_output.pci-0000_00_1f.3.hdmi-stereo +5%
	bindsym d exec --no-startup-id pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo -5% & pactl set-sink-volume alsa_output.pci-0000_00_1f.3.hdmi-stereo -5%
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_run RUN
mode "$mode_run" {
    bindsym a exec arandr, mode "default"
    bindsym b exec chromium-browser --incognito, mode "default"
    bindsym c exec $term -e calcurse -D ~/.config/calcurse, mode "default"
    bindsym d exec baobab, mode "default"
    bindsym e exec $term -e neomutt && pkill -RTMIN+12 i3blocks, mode "default"
    bindsym f exec firefox , mode "default"
    bindsym h exec $term -e htop, mode "default"
    bindsym m 			exec --no-startup-id $term -e ncmpcpp, mode "default"
    bindsym n exec nautilus --no-desktop, mode "default"
    bindsym $mod+n			exec $term -e newsboat && pkill -RTMIN+6 i3blocks
    bindsym p exec pcmanfm --no-desktop, mode "default"
    bindsym q exec python3 -m qutebrowser, mode "default"
    bindsym r exec $term -e $FILE, mode "default"
    bindsym t exec xfce4-terminal, mode "default"
    bindsym v exec code, mode "default"
    bindsym w exec $term -e nmtui, mode "default"
    bindsym x exec bash ~/hiwi/ACPLT-DevKit-linux64/acplt_dev, mode "default"
    bindsym plus exec --no-startup-id ddspawn dropdowncalc -f mono:pixelsize=24

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.config/i3/scripts/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_output (p)(h)(j)(f)
mode "$mode_output" {

    bindsym p exec --no-startup-id ~/.screenlayout/panda.sh , mode "default"
    bindsym h exec --no-startup-id ~/.screenlayout/home.sh , mode "default"
    bindsym j exec --no-startup-id ~/.screenlayout/job2.sh , mode "default"
    bindsym f exec --no-startup-id ~/.screenlayout/fat.sh , mode "default"
    # back to normal: Enter or Escape
    bindsym m move workspace to output $hdminame, mode "default"
    bindsym shift+m move workspace to output eDP1, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
