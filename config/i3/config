    bindsym shift+m move workspace to output up, mode "default"
    # bindsym m exec --no-startup-id dmenumount, mode "default"
    # bindsym shift+m exec --no-startup-id dmenuumount, mode "default"
    # scratchpad
    bindsym shift+s move scratchpad
    bindsym s scratchpad show
    bindsym u exec --no-startup-id dmenuunicode, mode "default"
    bindsym slash exec --no-startup-id ducksearch, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

